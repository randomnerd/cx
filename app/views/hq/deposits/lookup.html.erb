<div class="panel panel-default panel-big-heading" id="currencies">
  <div class="panel-heading">
    Deposits
  </div>

  <form action="/hq/deposits/lookup">
    <div class="form-group">
      <label for="curr">Currency name</label>
      <input type="text" class="form-control" name="currency" id="curr" placeholder="MOON" value="<%= params[:currency] %>">
    </div>
    <div class="form-group">
      <label for="txid">TXID</label>
      <input type="text" class="form-control" name="txid" id="txid" placeholder="txid here" value="<%= params[:txid] %>">
    </div>
    <button class="btn btn-primary">Lookup deposit</button>

    <% if @result.present? %>
      <pre><%= @result.to_json %></pre>
    <% end %>
  </form>

</div>
