<div {{bind-attr class=":message :panel :panel-default :nopadding mention:highlight own:own content.system:system content.failed:failed"}}>
  <div class="text-muted pull-right">
    {{view Cx.TimeagoView title=content.time}}
  </div>
  <div class="nickname">
    <a {{action 'addName' this}}>{{content.name}}</a>
  </div>
  {{#if currentUser.admin}}
    <a class="pull-right nodecor" {{action 'remove' this}}>
      <i class="fa fa-trash-o"></i>
    </a>
  {{/if}}
  {{#if content.errors}}
    Errors:
    <ul>
    {{#each err in content.errors}}
      <li>{{err}}</li>
    {{/each}}
    </ul>
  {{else}}
    {{content.body}}
  {{/if}}
</div>
