<div {{bind-attr class=":message :panel :panel-default :nopadding mention:highlight own:own system:system failed:failed"}}>
  <div class="text-muted pull-right">
    {{view Cx.TimeagoView title=time}}
  </div>
  <div class="nickname">
    <a {{action 'addName' this}}>{{name}}</a>
  </div>
  {{#if currentUser.admin}}
    <a class="pull-right nodecor" {{action 'remove' this}}>
      <i class="fa fa-trash-o"></i>
    </a>
  {{/if}}
  {{#if sErrors}}
    Errors:
    <ul>
    {{#each err in sErrors}}
      <li>{{err}}</li>
    {{/each}}
    </ul>
  {{else}}
    {{body}}
  {{/if}}
</div>
