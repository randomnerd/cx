<div id="chat" {{bind-attr class=":col-sm-3 :panel :panel-default :panel-big-heading hide:chat-hide"}}>
  <div class="panel-heading">
    <a class="nodecor" {{action 'toggle'}}>Chat box</a>
  </div>
  <div class="content">

    <div class="messages" id="messageList">
      {{#each msg in controllers.messages}}
      {{render message msg}}
      {{else}}
      <div class="text-muted">No messages yet</div>
      {{/each}}
    </div>

    <div {{bind-attr class=":nomargin currentUser.isSignedIn::well currentUser.isSignedIn::well-small"}}>
      {{#if currentUser.isSignedIn}}
      <form class="nomargin">
        <div class="input-group">
          {{input type="text" value=msg autocomplete="off" class="form-control" placeholder="Type your message here..."}}
          <span class="input-group-btn">
            <button {{bind-attr class=":btn :btn-primary allowSend::disabled"}} {{action 'submit'}}>
              Send
            </button>
          </span>
        </div>
      </form>
      {{else}}
        <a {{action 'openLoginMenu'}}>Log in or sign up</a> to post a message
      {{/if}}
    </div>

  </div>
</div>
