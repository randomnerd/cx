<div class="panel panel-default panel-big-heading">
  <div class="panel-heading">Change password</div>
  <form class="nomargin" id="change-password-form">
  {{#unless token}}
  <div class="form-group">
    <label for="old-password-input">Old password</label>
    {{input type="password" value=oldPassword
      class="form-control" id="old-password-input"}}
  </div>
  {{/unless}}
  <div class="form-group">
    <label for="new-password-input">New password</label>
    {{input type="password" value=newPassword
      class="form-control" id="new-password-input"}}
  </div>
  <div class="form-group">
    <label for="new-password-conf-input">Confirm new password</label>
    {{input type="password" value=newPasswordConf
      class="form-control" id="new-password-conf-input"}}
  </div>
  {{#link-to 'tradeIndex' class="btn btn-default"}}Cancel{{/link-to}}
  <button {{bind-attr class=":btn :btn-primary allowSave::disabled"}} {{action 'submit'}}>Save</button>
  </form>
</div>
