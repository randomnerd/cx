<h1 style="margin-top: 0px;">
Mining workers
<button class="btn btn-primary" {{action 'newWorker'}}>
  <i class="fa fa-plus"></i>&nbsp; New worker
</button>
</h1>

{{#each worker in controller}}
{{render 'worker' worker}}
{{else}}
<h3 class="text-muted">You have no mining workers yet.</h3>
{{/each}}
